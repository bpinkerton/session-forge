# SessionForge Environment Variables
# Copy this file to .env.local for local development

# ===============================================
# SUPABASE CONFIGURATION
# ===============================================
# Production: Use your production Supabase project
# Staging/Preview: Use your staging Supabase project  
# Local: Use local Supabase or staging project

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...your-anon-key...

# ===============================================
# FEATURE FLAGS (Optional)
# ===============================================
# Control feature availability per environment

# Enable debug mode (shows extra logging)
# Production: false | Staging/Dev: true
VITE_ENABLE_DEBUG=true

# Enable analytics tracking
# Production: true | Staging/Dev: false
VITE_ENABLE_ANALYTICS=false

# ===============================================
# ENVIRONMENT INDICATOR (Optional)
# ===============================================
# Helps identify which environment you're in
# Values: production | staging | preview | development
VITE_ENVIRONMENT=development